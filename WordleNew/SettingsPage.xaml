<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordleNew.SettingsPage"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <StackLayout Padding="20">
        <Label Text="Settings" TextColor="{DynamicResource TextColor}" FontSize="{DynamicResource MediumFontSize}" HorizontalOptions="Center" />

        <Label Text="Select Theme" TextColor="{DynamicResource TextColor}" FontSize="{DynamicResource MediumFontSize}" />
        <Switch x:Name="ThemeSwitch" Toggled="OnThemeToggled" />

        <Label Text="Font Size" TextColor="{DynamicResource TextColor}" FontSize="{DynamicResource MediumFontSize}" />
        <Slider x:Name="FontSizeSlider" Minimum="12" Maximum="24" ValueChanged="OnFontSizeChanged" />
    </StackLayout>
</ContentPage>
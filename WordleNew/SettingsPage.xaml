<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordleNew.SettingsPage"
             BackgroundColor="White">

    <StackLayout Padding="20">
        <Label Text="Settings" FontSize="32" HorizontalOptions="Center" />
        <Label Text="Select Theme" FontSize="18" />
        <Switch x:Name="ThemeSwitch" Toggled="OnThemeToggled" />
        <Label Text="Font Size" FontSize="18" />
        <Slider Minimum="12" Maximum="20" ValueChanged="OnFontSizeChanged" />
    </StackLayout>
</ContentPage>